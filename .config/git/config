# vim: ft=gitconfig:
[color]
  status = auto
  branch = auto
  diff = auto
  interactive = auto
[interactive]
    diffFilter = delta --color-only
[core]
  excludesfile = ~/.config/git/globalignore
  editor = "nvim"
  pager = delta
[apply]
  whitespace = nowarn
[help]
  autocorrect = 1
[alias]
  lg1 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  lg2 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%cD%C(reset) %C(bold green)(%cr)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)' --abbrev-commit
  lg = !"git lg1"
  ac = commit --amend
  pa = add --patch
  co = checkout
  st = status
  pr = pull --rebase
  m = merge
  b = branch
  a = add
  p = push
  c = commit
  v = commit -v
  s = switch
  wt = worktree
  trust = "!mkdir -p .git/safe"
  cb = "!f() { git checkout $(git branch | grep -v \"^\\*\" | fzf --height=20% --reverse --info=inline); }; f"
[push]
  default = current
[diff]
  colorMoved = default
[delta]
  navigate = true
  side-by-side = true
  line-numbers = true
  features = catppuccin-mocha
[merge]
  tool = nvimdiff
 conflictstyle = diff3
[difftool]
  tool = nvimdiff
  prompt = false
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[include]
  path = .gitconfig.local
  path = ~/.config/git/catppuccin.gitconfig
[commit]
  template = ~/.config/git/message
[github]
 user = RichGuk
[user]
  name = Rich Grundy
  email = rich@grundy.io
  signingkey = 1C4A386A1ED649A6
[credential]
 helper = cache --timeout=3600
[init]
 defaultBranch = main
[rebase]
  instructionFormat = (%an) %s
[rerere]
  enabled = true

[includeIf "gitdir:~/Dev/Work/"]
  path = ~/.config/git/work
